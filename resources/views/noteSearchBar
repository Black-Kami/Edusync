    <main style="padding: 2rem; max-width: 1200px; margin: 0 auto;">
        <h1>Welcome to Our Website</h1>
        <p>Try searching for something using the header search bar. This implementation includes:</p>
        <ul>
            <li>Responsive design that works on all screen sizes</li>
            <li>Typeahead search functionality</li>
            <li>Accessible markup with proper ARIA labels</li>
            <li>Smooth animations and transitions</li>
            <li>Clean, modern UI with gradient header</li>
        </ul>
    </main>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchForm = document.getElementById('searchForm');
            const searchInput = document.getElementById('searchInput');
            const searchResults = document.getElementById('searchResults');
            let searchTimeout;

            // Mock search function (replace with actual API call in production)
            function performSearch(query) {
                return new Promise(resolve => {
                    // Simulate network delay
                    setTimeout(() => {
                        if (!query.trim()) {
                            resolve([]);
                            return;
                        }
                        
                        // Mock data - replace with real data from your backend
                        const mockResults = [
                            { title: `${query} Product`, category: 'Products' },
                            { title: `Guide to ${query}`, category: 'Articles' },
                            { title: `${query} Service`, category: 'Services' },
                            { title: `About ${query}`, category: 'Information' },
                        ];
                        
                        resolve(mockResults);
                    }, 300);
                });
            }

            // Display loading state
            function showLoading() {
                searchResults.innerHTML = '<div class="loading"><div class="loading-spinner"></div></div>';
                searchResults.style.display = 'block';
            }

            // Display search results
            function displayResults(results) {
                if (results.length === 0) {
                    searchResults.innerHTML = '<div class="search-result-item">No results found</div>';
                    searchResults.style.display = 'block';
                    return;
                }

                searchResults.innerHTML = '';
                results.forEach(result => {
                    const item = document.createElement('div');
                    item.className = 'search-result-item';
                    item.innerHTML = `
                        <strong>${result.title}</strong>
                        <div style="font-size: 0.8rem; color: #666;">${result.category}</div>
                    `;
                    item.addEventListener('click', () => {
                        alert(`You selected: ${result.title}`);
                        searchResults.style.display = 'none';
                    });
                    searchResults.appendChild(item);
                });
                searchResults.style.display = 'block';
            }

            // Handle search input
            searchInput.addEventListener('input', function() {
                clearTimeout(searchTimeout);
                const query = this.value.trim();
                
                if (query.length < 2) {
                    searchResults.style.display = 'none';
                    return;
                }

                showLoading();
                
                searchTimeout = setTimeout(async () => {
                    const results = await performSearch(query);
                    displayResults(results);
                }, 500);
            });

            // Handle form submission
            searchForm.addEventListener('submit', function(e) {
                e.preventDefault();
                const query = searchInput.value.trim();
                if (query) {
                    alert(`Performing search for: ${query}`);
                    // In a real app, you would submit the form or redirect to search results page
                    // For PHP implementation, you would set action="search.php" on the form
                }
            });

            // Hide results when clicking outside
            document.addEventListener('click', function(e) {
                if (!searchForm.contains(e.target)) {
                    searchResults.style.display = 'none';
                }
            });

            // Handle keyboard navigation
            searchInput.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    searchResults.style.display = 'none';
                }
            });
        });

        // PHP Integration Note:
        // To connect with PHP backend:
        // 1. Add action="search.php" to the form element
        // 2. Add method="get" or method="post" depending on your needs
        // 3. Ensure your PHP script processes the search query and returns results
        // 4. For real-time results, consider using fetch() API to a PHP endpoint
    </script>
</body>
</html>

